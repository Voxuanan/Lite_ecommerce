@*@model IEnumerable<SV19T1081001.DomainModel.Customer>*@
@model SV19T1081001.DomainModel.CustomerPaginationResult
@{
    ViewBag.Title = "Khách Hàng";
}

<form action="~/customer" method="get">
    <div class="input-group">
        <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên khách hàng, tên giao dịch, hoặc địa chỉ để tìm kiếm..." autofocus value="@Model.SearchValue">
        <span class="input-group-btn">
            <button type="submit" id="search-btn" class="btn btn-flat btn-primary">
                <i class="fa fa-search"></i>
            </button>
        </span>
        <span class="input-group-btn" style="padding-left:5px;">
            <a href="~/customer/create" class="btn btn-flat btn-primary">
                <i class="fa fa-plus"></i> Thêm mới
            </a>
        </span>

    </div>
</form>
<br />
<p>Có tổng cộng <b>@Model.RowCount</b> khách hàng trong tổng số <b>@Model.PageCount</b> trang</p>


<div class="box">
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered table-responsive table-hover table-striped">
            <thead class="bg-primary">
                <tr>
                    <th>Tên khách hàng</th>
                    <th>Tên giao dịch</th>
                    <th>Địa chỉ</th>
                    <th>Quốc gia</th>
                    <th>Thành phố</th>
                    <th>Mã bưu chính</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.CustomerName</td>
                        <td>@item.ContactName</td>
                        <td>@item.Address</td>
                        <td>@item.Country</td>
                        <td>@item.City</td>
                        <td>@item.PostalCode</td>
                        <td class="text-center">
                            <a href="~/customer/edit/@item.CustomerID" class="btn btn-xs btn-success"><i class="fa fa-edit"></i></a>
                            <a href="~/customer/delete/@item.CustomerID" class="btn btn-xs btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
    <div class="box-footer clearfix">
        <ul class="pagination no-margin pull-right">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a>@i</a></li>
                }
                else
                {
                    <li><a href="~/customer/?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }
            }
        </ul>
    </div>

    <!-- /.box -->

</div>
