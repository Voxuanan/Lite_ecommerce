@model SV19T1081001.DomainModel.ProductPaginationResult
@{
    ViewBag.Title = "Mặt hàng";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>
    <div class="box-body">
        <form action="~/product" method="get">
            <div class="row">
                <div class="col-sm-3">
                    @Html.DropDownListFor(m => m.CategoryID, SelectListHelper.Categories(), new { @class = "form-control" })
                    @*<select class="form-control" name="category">
                            <option>-- Loại hàng --</option>
                            <option>Mỹ phẩm</option>
                            <option>Thực phẩm</option>
                        </select>*@
                </div>
                <div class="col-sm-3">
                    @Html.DropDownListFor(m => m.SupplierID, SelectListHelper.Suppliers(), new { @class = "form-control" })
                    @*<select class="form-control" name="category">
                            <option>-- Nhà cung cấp --</option>
                            <option>Công ty TNHH Thành Công</option>
                            <option>Vina Foods</option>
                        </select>*@
                </div>
                <div class="col-sm-6 input-group">
                    <input type="text" name="searchValue"
                           class="form-control"
                           placeholder="Nhập tên mặt hàng cần tìm"
                           value="@Model.SearchValue">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-flat btn-primary">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="~/product/create"
                           class="btn btn-flat btn-primary"
                           style="margin-left:5px;">
                            <i class="fa fa-plus"></i> Thêm mới

                        </a>
                    </span>
                </div>
            </div>
        </form>

        <p style="margin:10px 0 10px 0">
            Có tổng cộng <b>@Model.RowCount</b> mặt hàng trong tổng số <b>@Model.PageCount</b> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th style="width:80px">Ảnh</th>
                        <th>Tên mặt hàng</th>
                        <th>Đơn vị tính</th>
                        <th>Giá</th>
                        <th style="width:75px">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>
                                <img src="/@item.Photo" style="width:80px"  onerror="this.onerror=null;this.src='/Images/default.jpg';"/>
                            </td>
                            <td style="vertical-align:middle">@item.ProductName</td>
                            <td style="vertical-align:middle">@item.Unit</td>
                            <td style="vertical-align:middle">@item.Price</td>
                            <td class="text-right" style="vertical-align:middle">
                                <a href="~/product/edit/@item.ProductID" class="btn btn-xs btn-flat btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/product/delete/@item.ProductID" class="btn btn-xs btn-flat btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer clearfix">
        <ul class="pagination no-margin pull-right">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a>@i</a></li>
                }
                else
                {
                    <li><a href="~/product/?page=@i&searchValue=@Model.SearchValue&supplierID=@Model.SupplierID&categoryID=@Model.CategoryID">@i</a></li>
                }
            }
        </ul>
    </div>

    <!-- /.box -->
</div>

