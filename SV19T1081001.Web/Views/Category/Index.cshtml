@model SV19T1081001.DomainModel.CategoryPaginationResult
@{
    ViewBag.Title = "Loại Hàng";
}

<form action="~/category" method="get">
    <div class="input-group">
        <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên hoặc mô tả loại hàng để tìm kiếm..." autofocus value="@Model.SearchValue">
        <span class="input-group-btn">
            <button type="submit" id="search-btn" class="btn btn-flat btn-primary">
                <i class="fa fa-search"></i>
            </button>
        </span>
        <span class="input-group-btn" style="padding-left:5px;">
            <a href="~/category/create" class="btn btn-flat btn-primary">
                <i class="fa fa-plus"></i> Thêm mới
            </a>
        </span>

    </div>
</form>
<br />
<p>Có tổng cộng <b>@Model.RowCount</b> khách hàng trong tổng số <b>@Model.PageCount</b> trang</p>

<div class="box">
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered table-responsive table-hover table-striped">
            <thead class="bg-primary">
                <tr>
                    <th>Tên loại hàng</th>
                    <th>Mô tả</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>

                        <td class="text-center">
                            <a href="~/category/edit/@item.CategoryID" class="btn btn-xs btn-success"><i class="fa fa-edit"></i></a>
                            <a href="~/category/delete/@item.CategoryID" class="btn btn-xs btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
    <div class="box-footer clearfix">
        <ul class="pagination no-margin pull-right">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a>@i</a></li>
                }
                else
                {
                    <li><a href="~/category/?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                }
            }
        </ul>
    </div>

    <!-- /.box -->

</div>
